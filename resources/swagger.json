{
  "openapi": "3.0.0",
  "info": {
    "title": "API Cronograma Capilar",
    "version": "1.0.0",
    "description": "API para acompanhamento de cronograma capilar."
  },
  "paths": {
    "/users/register": {
      "post": {
        "summary": "Registrar usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": { "type": "string" },
                  "password": { "type": "string" },
                  "hairType": { "type": "string", "enum": ["3b", "3c", "4a", "4b", "4c", "4d"] }
                },
                "required": ["username", "password", "hairType"]
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Usuário registrado com sucesso" },
          "409": { "description": "Usuário já existe" },
          "400": { "description": "Dados obrigatórios ausentes" }
        }
      }
    },
    "/users/login": {
      "post": {
        "summary": "Login do usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": { "type": "string" },
                  "password": { "type": "string" }
                },
                "required": ["username", "password"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Login realizado com sucesso" },
          "401": { "description": "Credenciais inválidas" },
          "400": { "description": "Dados obrigatórios ausentes" }
        }
      }
    },
    "/treatments/list": {
      "get": {
        "summary": "Listar todos os tratamentos",
        "responses": {
          "200": {
            "description": "Lista de tratamentos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Treatment" }
                }
              }
            }
          }
        }
      }
    },
    "/treatments/type/{type}": {
      "get": {
        "summary": "Listar tratamentos por tipo",
        "parameters": [
          {
            "name": "type",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de tratamentos do tipo",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Treatment" }
                }
              }
            }
          },
          "404": { "description": "Tipo de tratamento não encontrado" }
        }
      }
    },
    "/logs/add": {
      "post": {
        "summary": "Adicionar log de lavagem",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "date": { "type": "string", "format": "date" },
                  "treatment": { "type": "string" },
                  "feedback": { "type": "string" }
                },
                "required": ["date", "treatment"]
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Log criado com sucesso" },
          "400": { "description": "Dados obrigatórios ausentes" },
          "401": { "description": "Token não fornecido" },
          "403": { "description": "Token inválido" }
        }
      }
    },
    "/logs/list": {
      "get": {
        "summary": "Listar logs do usuário",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Lista de logs",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Log" }
                }
              }
            }
          },
          "401": { "description": "Token não fornecido" },
          "403": { "description": "Token inválido" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Treatment": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "description": { "type": "string" },
          "type": { "type": "string" },
          "instructions": { "type": "string" }
        }
      },
      "Log": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "userId": { "type": "integer" },
          "date": { "type": "string", "format": "date" },
          "treatment": { "type": "string" },
          "feedback": { "type": "string" }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
